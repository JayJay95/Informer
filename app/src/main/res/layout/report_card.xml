<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/reportcard_firstname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/accent" />

            <TextView
                android:id="@+id/reportcard_lastname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/accent" />

            <TextView
                android:id="@+id/reportcard_county"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/accent" />

            <TextView
                android:id="@+id/reportcard_constituency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/accent" />

            <TextView
                android:id="@+id/reportcard_ward"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/accent" />

            <TextView
                android:id="@+id/reportcard_pollingstation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/accent" />

            <TextView
                android:id="@+id/reportcard_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/accent" />

            <TextView
                android:id="@+id/reportcard_perpetrator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20sp"
                android:textColor="@color/accent" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>